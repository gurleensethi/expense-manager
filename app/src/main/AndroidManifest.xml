<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="app.com.thetechnocafe.expensemanager">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ExpenseActivity">
        </activity>
        <activity android:name=".ExpensesListActivity">
        </activity>
        <activity android:name=".AboutActivity">
        </activity>
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".PreviousTripDetailActivity">
        </activity>
        <activity android:name=".NewTripActivity">
        </activity>
        <activity android:name=".NewExpenseActivity">
        </activity>
        <activity android:name=".SettingsActivity">
        </activity>
        <activity android:name=".GraphTabActivity">
        </activity>
    </application>

</manifest>